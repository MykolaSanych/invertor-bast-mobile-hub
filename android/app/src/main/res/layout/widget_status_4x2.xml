<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_status_background"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="6dp"
    android:paddingRight="8dp"
    android:paddingBottom="6dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/widgetColumnLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelOutsideTemp"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_outside_temp"
                android:textColor="#00D4FF"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValueOutsideTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#00D4FF"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelPvPower"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_pv_power"
                android:textColor="#FFB347"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValuePvPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#FFB347"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelGridPower"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_grid_power"
                android:textColor="#4F7CFF"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValueGridPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#4F7CFF"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widgetColumnDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text=""
        android:background="#805C90D9" />

    <LinearLayout
        android:id="@+id/widgetColumnRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelLoadPower"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_load_power"
                android:textColor="#FF4D6D"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValueLoadPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#FF4D6D"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelBatteryPower"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_battery_power"
                android:textColor="#33FF99"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValueBatteryPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#33FF99"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLabelBatterySoc"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="@string/widget_metric_battery_soc"
                android:textColor="#33FF99"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetValueBatterySoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#33FF99"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
